{
  "manifest_version": 3,
  "name": "GitHub Recently Viewed PRs/Issues",
  "description": "Add a drop down to quickly access to recently viewed Pull Requests and Issues",
  "version": "0.0.0.3",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["main.css"]
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}
