{
  "manifest_version": 3,
  "name": "GitHub Recently Viewed PRs/Issues",
  "description": "Add a drop down to quickly access to recently viewed Pull Requests and Issues",
  "version": "0.0.0.1",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/pulls",
        "*://github.com/*/pulls?*",
        "*://github.com/*/issues",
        "*://github.com/*/issues?*"
      ],
      "js": ["content_script.js"],
      "css": ["main.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "history"
  ]
}
